{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "pay.v1.request.post.schema",
    "description": "Pay Schema of Request. Method POST.",
    "type": "object",
    "properties": {
        "token": {
            "description": "token generado para la entidad",
            "type": "string",
            "minLength": 25,
            "maxLength": 40
        },
        "url_retorno": {
            "description": "url cual el servicio retorna",
            "type": "string",
            "pattern": "^[\\S]$|^[\\S].*[\\S]$"
        },
        "importe_transaccion": {
            "description": "cantidad total de la transaccion",
            "pattern": "^([0-9]+)(\\.([0-9]{1,2}))?$"
        },
        "id_transaccion": {
            "description": "identificador que la entidad envia de su transaccion",
            "pattern": "^[\\S]$|^[\\S].*[\\S]$"
        },
        "entidad": {
            "description": "identificador de la entidad definido por egobierno",
            "pattern": "^[0-9]([0-9])?$"
        },
        "url_confirma_pago": {
            "description": "se utiliza para consumir el servicio de la entidad"
        },
        "es_referencia": {
            "description": "se utiliza para saber si se hace redireccion o no",
            "pattern": "^1$"
        },
        "tramite": {
            "description": "arreglo de tramites a cobrar",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "id_seguimiento": {},
                    "id_tipo_servicio": {
                        "pattern": "^[0-9]([0-9])?$"
                    },
                    "id_tramite": {
                        "pattern": "^[\\S]$|^[\\S].*[\\S]$"
                    },
                    "importe_tramite": {
                        "pattern": "^([0-9]+)(\\.([0-9]{1,2}))?$"
                    },
                    "auxiliar_1": {},
                    "auxiliar_2": {},
                    "auxiliar_3": {},
                    "datos_solicitante": {
                        "type": "object",
                        "properties": {
                            "nombre": {},
                            "apellido_paterno": {},
                            "apellido_materno": {},
                            "razon_social": {},
                            "rfc": {},
                            "curp": {},
                            "email": {},
                            "calle": {},
                            "colonia": {},
                            "numexterior": {},
                            "numinterior": {},
                            "municipio": {},
                            "codigopostal": {}
                        },
                        "additionalProperties": false
                    },
                    "datos_factura": {
                        "type": "object",
                        "properties": {
                            "nombre": {},
                            "apellido_paterno": {},
                            "apellido_materno": {},
                            "razon_social": {},
                            "rfc": {},
                            "curp": {},
                            "email": {},
                            "calle": {},
                            "colonia": {},
                            "numexterior": {},
                            "numinterior": {},
                            "municipio": {},
                            "codigopostal": {}
                        },
                        "additionalProperties": false
                    },
                    "detalle": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "properties": {
                                "concepto": {
                                    "pattern": "^[\\S]$|^[\\S].*[\\S]$"
                                },
                                "importe_concepto": {
                                    "pattern": "^([0-9]+)(\\.([0-9]{1,2}))?$"
                                },
                                "partida": {
                                    "pattern": "^([1-9])([0-9]{4})$"
                                },
                                "descuentos": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "concepto_descuento": {
                                                "pattern": "^[\\S]$|^[\\S].*[\\S]$"
                                            },
                                            "importe_descuento": {
                                                "pattern": "^([0-9]+)(\\.([0-9]{1,2}))?$"
                                            },
                                            "partida_descuento": {
                                                "pattern": "^([1-9])([0-9]{4})$"
                                            }
                                        },
                                        "required": [
                                            "concepto_descuento",
                                            "importe_descuento",
                                            "partida_descuento"
                                        ],
                                        "additionalProperties": false
                                    }
                                }
                            },
                            "required": [
                                "concepto",
                                "importe_concepto",
                                "partida"
                            ],
                            "additionalProperties": false
                        }
                    }
                },
                "required": [
                    "id_tipo_servicio",
                    "id_tramite",
                    "importe_tramite",
                    "datos_solicitante",
                    "detalle"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "token",
        "url_retorno",
        "importe_transaccion",
        "id_transaccion",
        "entidad",
        "tramite"
    ]
}